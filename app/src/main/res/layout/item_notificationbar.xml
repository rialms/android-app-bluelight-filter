<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_background_settting"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_night_mode"
        android:layout_width="0dp"
        android:layout_height="@dimen/_60sdp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_7sdp">

        <ImageView
            android:id="@+id/img_night_mode"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_brightness_4_black_24dp" />

        <TextView
            android:id="@+id/tv_night_mode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Night Mode"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_flash_light"
        android:layout_width="0dp"
        android:layout_height="@dimen/_60sdp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_7sdp">

        <ImageView
            android:id="@+id/img_flash_light"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_highlight_black_24dp" />

        <TextView
            android:id="@+id/tv_flash_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Flashlight"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_mute"
        android:layout_width="0dp"
        android:layout_height="@dimen/_60sdp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_7sdp">

        <ImageView
            android:id="@+id/img_mute"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_volume_off_black_24dp" />

        <TextView
            android:id="@+id/tv_mute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Mute"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_setting"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_10sdp"
        android:src="@drawable/ic_settings_black_24dp" />

</LinearLayout>